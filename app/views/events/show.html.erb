<div class="centered">
    <%= render "info" %>

    <% if @event.date >= Time.now.to_date %>
        <div class="row space-around">
            <div class="att-inv">
                <%= render "attendances" %>
            </div>
            <% if @event.private? %>
                <div class="att-inv">
                    <%= render "invitations" %>
                </div>
            <% end %>
        </div>
    <% end %>
</div>
<br>